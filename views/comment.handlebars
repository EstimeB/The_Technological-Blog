{{! Posts }}
<div class='signF'>
  <div class='blogrow'>
    <h2 class='blogtitle'>{{name}}</h2>
    <p class='pPost'>Posted by
      {{user.user_name}}
      on
      {{format_date date_created}}</p>
  </div>
  <div class='signL'>
    <p class='signL'>{{post_description}}</p>
  </div>
</div>

<br />

{{! Comments }}
{{#each comments as |comment|}}
  <div class='comment-list signF'>
    <h2 class='none'></h2>
    <p class='signL'>{{comment.comment_des}}</p>
    <br />
    <p class='signL'>-{{comment.user.user_name}},
      {{format_date date_created}}</p>
  </div>
  <br />
{{/each}}

<div class='signF'>
  <h2 class='none'></h2>

  <form class='form new-comment-form signL'>
    <div class='form-group'>
      <label for='signL'>Comment</label>
      <textarea class='comment-input rowdash' data-blog-id="{{id}}" id='comment-desc' name='comment-desc'></textarea>
    </div>
    <br />
    <div class='form-group'>
      <button type='submit' class='btn btn-primary signupBtn'>Submit</button>
    </div>
  </form>
</div>

<script src='/js/forComment.js'></script>