{{! Posts }}
<div class='signF'>
  <div class='blogrow'>
    <h2 class='blogtitle'>{{name}}</h2>
    <p class='pPost'>Posted by
      {{user.user_name}}
      on
      {{format_date date_created}}</p>
  </div>
  <div class='signL'>
    <p class="signL">{{post_description}}</p>
  </div>
</div>

<br />

{{! Comments }}
{{#if comments.length}}
{{#each comments as |comment|}}
<div class="comment-list signF">
  <h2 class="none"></h2>
  <p class="signL">{{comment.comment_des}}</p>
  <br>
  <p class="signL">-{{comment.user.user_name}}, {{format_date date_created}}</p>
  {{/each}}
</div>
{{/if}}

<div class="signF">
  <h2 class="none"></h2>

  <div class="new-comment-form">
    <label for="signL">Comment</label>
    <input class="comment-input rowdash" type="text" id="comment-desc" name="comment-desc" />
  </div>
  <br />
      <div class='form-group'>
        <button type='submit' class='btn btn-primary signupBtn'>Create</button>
      </div>
  </form>
</div>

<script src='./js/forComment.js'></script>